{
  "name": "bubble-gum-tools",
  "version": "0.0.1",
  "description": "tools for working with nested objects",
  "main": "lib/bubble-gum.js",
  "scripts": {
    "lint": "standard 'packages/*/src/*.js' 'packages/*/test/*.js'",
    "coverage:clean": "rimraf ./coverage && rimraf ./.nyc_output",
    "precoverage": "npm run coverage:clean",
    "coverage": "nyc --reporter=lcov --reporter=text-summary npm run test",
    "test": "cross-env PROJECT_PATH=`pwd` node scripts/test",
    "test:dev": "nodemon -q -w ./packages -x 'npm run test'",
    "clean:bundle": "rimraf ./lib && mkdir lib || true",
    "es6:bundle": "babel ./lib/bubble-gum.js --out-file ./lib/bubble-gum.js",
    "prebuild:bundle": "npm run clean:bundle",
    "build:bundle": "node scripts/build-bundle.js",
    "postbuild:bundle": "npm run es6:bundle",

    "clean:packages": "rimraf ./packages/*/lib",
    "es6:packages": "cross-env PROJECT_PATH=`pwd` node scripts/build-packages-es6.js",
    "prebuild:packages": "npm run clean:packages",
    "build:packages": "cross-env PROJECT_PATH=`pwd` node scripts/build-packages.js",
    "postbuild:packages": "npm run es6:packages"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nquicenob/bubble-gum-tools.git"
  },
  "keywords": [
    "tools",
    "utils",
    "nested",
    "objects",
    "objects",
    "deep",
    "dot",
    "notation"
  ],
  "author": "Nicolas Quiceno Benavides",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nquicenob/bubble-gum-tools/issues"
  },
  "homepage": "https://github.com/nquicenob/bubble-gum-tools#readme",
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.16.0",
    "chalk": "^1.1.3",
    "coveralls": "^2.11.15",
    "cross-env": "^3.1.3",
    "fs-extra": "^0.30.0",
    "glob": "^7.1.1",
    "lerna": "2.0.0-beta.30",
    "minimist": "^1.2.0",
    "nyc": "^9.0.1",
    "rimraf": "^2.5.4",
    "rollup": "^0.36.3",
    "rollup-plugin-node-resolve": "^2.0.0",
    "tape": "^4.6.2"
  },
  "scriptsConfig": {
    "rootDir": "packages",
    "alias": {
      "create": "packages/bubble-gum-create",
      "get": "packages/bubble-gum-get",
      "goto": "packages/bubble-gum-goto",
      "has": "packages/bubble-gum-has",
      "set": "packages/bubble-gum-set",
      "slice": "packages/bubble-gum-slice"
    }
  },
  "nyc": {
    "exclude": [
      "packages/*/lib",
      "packages/*/test",
      "scripts"
    ]
  }
}
